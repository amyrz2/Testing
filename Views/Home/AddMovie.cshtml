@{
    ViewData["Title"] = "Add Movie";
}

@model Movies.Models.ApplicationResponse

<h1 class="text-center">If you would like to add a movie, fill out the form below!</h1>

@*Form to add a movie or edit*@
<div>

    <form method="post">

        <label asp-for="CategoryID">Category:</label>
        <select class="form-control" asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select>
        <br />

        <label asp-for="Title">Title:</label>
        <input class="form-control" asp-for="Title" />
        <br />

        <label asp-for="Year">Year:</label>
        <input class="form-control" min="1880" max="3000" asp-for="Year"/>
        <br />

        <label asp-for="Director">Director:</label>
        <input class="form-control" asp-for="Director" />
        <br />

        <label asp-for="Rating">Rating:</label>
        <select class="form-control" asp-for="Rating">
            <option value=""> Select a Rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />

        <label asp-for="Edited">Edited:</label>
        <select class="form-control" asp-for="Edited">
            <option></option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />

        <label asp-for="LentTo">Lent to:</label>
        <input class="form-control" asp-for="LentTo" maxlength="20" />
        <br />

        <label asp-for="Notes">Notes:</label>
        <textarea class="form-control" asp-for="Notes" maxlength="25"></textarea>
        <br />

        <button type="submit">Submit Application</button>
        <br /><br /><br />

        <!--output any errors-->
        <div asp-validation-summary="All"></div>

    </form>

</div>