@{
    ViewData["Title"] = "Delete Application";
}

@model ApplicationResponse

<h2 class="text-center">Confirm Deletion</h2>
<h3 class="text-center">Are you sure you want to delete the record for @Model.Title?</h3>

<div class="text-center">
    <form method="post" asp-controller="Home" asp-action="Delete">
        <button type="submit">Delete</button>
        <a asp-controller="Home" asp-action="ViewList" class="btn btn-primary">Cancel</a>
        <input type="hidden" asp-for="ApplicationID" />
    </form>
</div>
